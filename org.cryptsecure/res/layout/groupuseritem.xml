<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget44"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="20px"
    android:layout_weight="0.02"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/groupusericonback"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="left"
        android:layout_marginLeft="0px"
        android:layout_marginRight="0px"
        android:gravity="left"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/groupusericon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="0px"
            android:layout_marginLeft="0px"
            android:layout_marginRight="0px"
            android:layout_marginTop="0px"
            android:gravity="left"
            android:padding="2dp"
            android:src="@drawable/person" />
    </LinearLayout>
    
        <ImageView
        android:id="@+id/groupsent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="0px"
        android:layout_marginLeft="-4px"
        android:layout_marginRight="8px"
        android:layout_marginTop="0px"
        android:gravity="left"
        android:padding="2dp"
        android:src="@drawable/msgsent"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/groupreceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="0px"
        android:layout_marginLeft="-4px"
        android:layout_marginRight="8px"
        android:layout_marginTop="0px"
        android:gravity="left"
        android:padding="2dp"
        android:src="@drawable/msgreceived"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/groupread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="0px"
        android:layout_marginLeft="-4px"
        android:layout_marginRight="8px"
        android:layout_marginTop="0px"
        android:gravity="left"
        android:padding="2dp"
        android:src="@drawable/msgread"
        android:visibility="gone" />
    

    <TextView
        android:id="@+id/groupuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="100"
        android:padding="2dp"
        android:text="Delphino"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffE8E8E8"
        android:textSize="20dp" >
    </TextView>


</LinearLayout>
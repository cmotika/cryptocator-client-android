<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget44"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="12px"
    android:layout_weight="0.02"
    android:gravity="left"
    android:orientation="horizontal" >
    
    
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6px"
        android:layout_marginTop="6px"
        android:layout_marginLeft="0px"
        android:layout_marginRight="70px"
        android:gravity="left"
        android:orientation="horizontal" >

                            <ImageView
        android:id="@+id/msgspeech"
        android:layout_width="wrap_content"
        android:gravity="left"
        android:layout_height="wrap_content"
        android:src="@drawable/speech" />
        
    <LinearLayout
        android:id="@+id/oneline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0px"
        android:layout_marginLeft="0px"
        android:background="#ffDDDDDD"
        android:gravity="left"
        android:orientation="vertical" >

               <ProgressBar
            android:id="@+id/conversationprogress"
                        style="?android:attr/progressBarStyleHorizontal"
		                android:layout_marginTop="15px"
                        android:layout_marginBottom="5px"
			            android:layout_marginLeft="20px"
                        android:layout_marginRight="20px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />                    

        <org.cryptocator.ImageSmileyEditText
            android:id="@+id/conversationtext"
            android:layout_width="310px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="15px"
            android:autoLink="web"
            android:cursorVisible="true"
            android:editable="false"
            android:inputType="none"
            android:text="No Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ff000000"
            android:background="@null"
            android:textColorHighlight="#ff00AAff"
            android:textColorLink="#ff000000"
            android:textIsSelectable="true"
            android:textSize="18dp" >
        </org.cryptocator.ImageSmileyEditText>
<!--             android:background="@null"  -->
        
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/conversationtime"
                style="?android:attr/textViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="10px"
                android:layout_marginTop="5px"
                android:background="@null"
                android:inputType="none"
                android:text="22:10, Apr 30"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFA7A8A9"
                android:textSize="12dp"
                android:textStyle="bold" >
            </TextView>

            <ImageView
                android:id="@+id/msglocked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5px"
                android:layout_marginRight="10px"
                android:layout_marginTop="5px"
                android:src="@drawable/msglocked2" />
            
            <ImageView
                android:id="@+id/msgsms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5px"
                android:layout_marginRight="10px"
                android:layout_marginTop="5px"
                android:src="@drawable/sms2" />
            
            <TextView
                style="?android:attr/textViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10px"
                android:layout_marginTop="5px"
                android:background="@null"
                android:inputType="none"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffB5B4B4"
                android:textSize="10dp"
                android:textStyle="bold" >
            </TextView>            
            
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
    
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget44"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="20px"
    android:layout_weight="0.02"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/personiconback"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="left"
        android:layout_marginLeft="0px"
        android:layout_marginRight="0px"
        android:gravity="left"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/personicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="0px"
            android:layout_marginLeft="0px"
            android:layout_marginRight="0px"
            android:layout_marginTop="0px"
            android:gravity="left"
            android:src="@drawable/person" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/oneline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-5px"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/widget46"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10px"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/userlistname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:text="Delphino"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffE8E8E8"
                android:textSize="20dp" >
            </TextView>

            <TextView
                android:id="@+id/userlistdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10px"
                android:layout_weight="1"
                android:gravity="bottom"
                android:minWidth="30pt"
                android:text="Date"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="12dp" >
            </TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/userlisttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2px"
            android:layout_marginBottom="14px"
            android:lines="1"
            android:maxLines="1"
            android:text="Hallo wie geht es Dir?"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#CCDDDDDD"
            android:textSize="14sp" >
        </TextView>
    </LinearLayout>

</LinearLayout>
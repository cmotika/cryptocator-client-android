<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget44"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="12px"
    android:layout_weight="0.02"
    android:gravity="right"
    android:orientation="horizontal" >


        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6px"
        android:layout_marginTop="6px"
        android:layout_marginLeft="70px"
        android:layout_marginRight="1px"
        android:gravity="right"
        android:orientation="horizontal" > 
    
                
            
            
    <LinearLayout
        android:id="@+id/oneline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="0px"
        android:background="#ff0077ff"
        android:gravity="right"
        android:orientation="vertical" > 


        <EditText
            android:id="@+id/conversationtext"
            style="?android:attr/textViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="15px"
            android:autoLink="web"
            android:background="@null"
            android:cursorVisible="true"
            android:editable="false"
            android:inputType="none"
            android:text="No Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffffff"
            android:textColorHighlight="#ff004ADD"
            android:textColorLink="#ffffffff"
            android:textIsSelectable="true"
            android:textSize="18dp" >
        </EditText>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            android:layout_marginRight="10px"
            android:gravity="right"
            android:orientation="horizontal" >
            
                        <ImageView
                android:id="@+id/msgsms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2px"
                android:layout_marginRight="10px"
                android:layout_marginTop="5px"
                android:src="@drawable/sms" />

            <ImageView
                android:id="@+id/msglocked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2px"
                android:layout_marginRight="10px"
                android:layout_marginTop="5px"
                android:src="@drawable/msglocked" />

            <ImageView
                android:id="@+id/msgsent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5px"
                android:layout_marginRight="10px"
                android:src="@drawable/msgsent" />

            <ImageView
                android:id="@+id/msgreceived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2px"
                android:layout_marginRight="10px"
                android:layout_marginTop="5px"
                android:src="@drawable/msgreceived" />

            <ImageView
                android:id="@+id/msgread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2px"
                android:layout_marginRight="10px"
                android:layout_marginTop="5px"
                android:src="@drawable/msgread" />

            <TextView
                android:id="@+id/conversationtime"
                style="?android:attr/textViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15px"
                android:layout_marginRight="0px"
                android:layout_marginTop="5px"
                android:inputType="none"
                android:background="@null"
                android:text="22:10, Apr 30"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff94C5F2"
                android:textSize="12dp"
                android:textStyle="bold" >
            </TextView>
            
            <TextView
                style="?android:attr/textViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10px"
                android:layout_marginTop="5px"
                android:background="@null"
                android:inputType="none"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffB5B4B4"
                android:textSize="10dp"
                android:textStyle="bold" >
            </TextView>    
                        
        </LinearLayout>
    </LinearLayout>
    
    <ImageView
        android:id="@+id/msgspeech"
        android:layout_width="9dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:src="@drawable/speechme" />
    
    
    </LinearLayout>
    
</LinearLayout>